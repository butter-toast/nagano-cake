<div class='container'>
  <h5 class="col-3 my-5 my-3 bg-light text-center font-weight-bold">新規会員登録</h5>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-3">
        名前
      </div>
      <div class="col-3 text-right">
        <%= f.label :（姓） %>
        <%= f.text_field :last_name, placeholder: "令和" %>
      </div>
      <div class="col-3 text-right">
        <%= f.label :（名） %>
        <%= f.text_field :first_name, placeholder: "道子" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 my-1">
        フリガナ
      </div>
      <div class="col-3 text-right my-1">
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
      </div>
      <div class="col-3 text-right my-1">
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        メールアドレス
      </div>
      <div class="col-3 text-right">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 my-2">
        郵便番号(ハイフンなし)
      </div>
      <div class="col-3 text-right my-2">
        <%= f.text_field :post_code, placeholder: "0000000" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        住所
      </div>
      <div class="col-3 text-right">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 my-2">
        電話番号(ハイフンなし)
      </div>
      <div class="col-3 text-right my-2">
        <%= f.text_field :phone_number, placeholder: "0000000000" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <div class="col-3 text-right">
        <%= f.text_field :post_code, placeholder: "0000000" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 my-2">
        パスワード(確認用)
      </div>
      <div class="col-3 text-right my-2">
        <%= f.text_field :post_code, placeholder: "0000000" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
        <div class="col-3 my-4 text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class='container'>
  <h6 class="col-3 ml-2 my-4 bg-light text-center">既に登録済みの方</h6>
  <div class="col-sm-5 mx-auto mb-5">
    <%= render "public/shared/links" %>
  </div>
</div>



