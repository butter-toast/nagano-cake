<h2>配送先編集</h2>

<%= form_with model: @shipping, url: shipping_path(@shipping.id), method: :patch do |f| %>
    <div class="form-group">
      <label for="shipping_post_code">郵便番号</label>
      <%= f.text_field :post_code %>
    </div>
    <div class="form-group">
      <label for="shippng_address">住所</label>
      <%= f.text_area :address %>
    </div>
    <div class="form-group">
      <label for="shippng_name">宛名</label>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
<% end %>