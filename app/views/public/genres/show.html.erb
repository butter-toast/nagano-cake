<h2>ジャンル検索</h2>
<% @genres.each do |genre| %>
  <%= link_to genre_path(genre.id) do %>
    <%= genre.name %>
  <% end %>
<% end %>

<h2><%= @genre.name %>一覧（全<%= @products.count %>件）</h2>
<% @products.each do |product| %>
  <%= image_tag product.image %>
  <%= product.name %>
  <%= product.no_tax_price %>
<% end %>