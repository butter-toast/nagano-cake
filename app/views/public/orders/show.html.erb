<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払い方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= @order.address %></td>
      <td><%= @order.pay_method %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.product.name %></td>
        <td><%= order_detail.purchase_prise %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.subtotal %></td>
      </tr>
    <% end %>
  </tbody>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
    <tr>
      <td><%= @order.total_price %></td>
      <td><%= @order.shipping_fee %></td>
      <td><%= @order.total %></td>
    </tr>
  </thead>
</table>