<% @orders.each do |order| %>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.product.name %>
          <% end %>
        </td>
        <td><%= order.total %></td>
        <td><%= order.status %></td>
        <td><%= link_to "注文詳細", order_path(order.id), class: 'btn btn-success' %></td>
      </tr>
    </thead>
  </table>
<% end %>