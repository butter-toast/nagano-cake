<div class='container'>
  <h5 class="col-3 my-3 bg-light text-center">管理者ログイン</h5>

    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-2">
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: "mb-4", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>