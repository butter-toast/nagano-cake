<h2>商品編集</h2>
<%= form_with model:[:admin, @product], local: true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.label :name,"商品名" %>
    <%= f.text_field:name %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area:introduction %>
  </div>

  <div class="form-group">
    <%= f.label :product_genre_id,"商品ジャンル" %>
    <%= f.collection_select(:genre_id, @genres, :id, :name, prompt:"--選択してください--"  ) %>
  </div>

  <div class="form-group">
    <%= f.label :no_tax_price,"税抜き価格" %>
    <%= f.text_field:no_tax_price %>
  </div>

  <div class="form-group">
    <%= f.label :is_sale_status,"販売ステータス"%>
    <%= f.radio_button :is_sale_status ,"false" %>販売中<%= f.radio_button :is_sale_status ,"true" %>販売停止中
  </div>

  <%= f.submit "変更を保存", class: 'btn btn-success' %>
<% end %>