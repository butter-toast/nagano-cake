<% @orders.each do |order| %>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th></th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          <% end %>
        </td>
        <td><%= order.customer.full_name %></td>
        <td><%#= order.quantity %></td>
        <td><%= order.status%></td>
      </tr>
    </tbody>
  </table>
<% end %>