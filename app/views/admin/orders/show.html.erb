注文履歴詳細

<table>
  <tr>
    <th>購入者</th>
    <th>注文日</th>
    <th>配送先</th>
    <th>支払い方法</th>
    <th>注文ステータス</th>
  </tr>
  <tr>
    <td><%= @order.customer.full_name %></td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    <td>
      <%= @order.post_code %>
      <%= @order.address %>
      <%= @order.name%>
    </td>
    <td><%= @order.pay_method %></td>
    <td>
      <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
        <%= f.select :status, ["入金待ち", "入金確認", "制作中", "発送準備中", "発送済み"] %>
        <%= f.submit '更新', class: "btn btn-sm btn-success" %>
      <% end %>
    </td>
  </tr>

  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>制作ステータス</th>
  </tr>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.product.name %></td>
    <td><%= order_detail.purchase_prise %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= order_detail.subtotal %></td>
    <td>
      <%= form_with model: order_detail, url: admin_production_path(order_detail) do |f| %>
        <%= f.select :product_status, [["着手不可", 0], ["制作待ち", 1], ["制作中", 2], ["製作完了", 3]] %>
        <%= f.submit '更新', class: "btn btn-sm btn-success" %>
      <% end %>
    </td>
  </tr>
  <% end %>
    <tr>
    <th>商品合計</th>
    <th>配送料</th>
    <th>ご請求額</th>
  </tr>
  <tr>
    <td><%= @order.total_price %></td>
    <td><%= @order.shipping_fee %></td>
    <td><%= @order.total %></td>
  </tr>
</table>