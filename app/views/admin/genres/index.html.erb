<div class="container"

<h5>ジャンル一覧・追加</h5>

<%= form_with model:[:admin,@genre], local: true do |f| %>
  <div class="form-group">
    <%= f.label  :name, "ジャンル名" %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録",class:'btn btn-success' %>
<% end %>

<% @genres.each do |genre| %>
  <%= genre.name %>
  <%= link_to "編集する",edit_admin_genre_path(genre.id), class:'btn btn-success'  %>
<% end %>