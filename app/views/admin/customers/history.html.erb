<div class="container">
  <div class="row">
    <div class="col">
      <h5><%= @customer.last_name + @customer.first_name %>さんの注文履歴</h5>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td><%= order.status%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>