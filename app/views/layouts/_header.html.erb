<div class="container">
  <header class="d-flex flex-wrap justify-content-center py-5 mb-4 border-bottom">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
      <i class="fas fa-birthday-cake"></i>
      <span>ロゴ（仮）</span>
    </a>
  <!--顧客側：ログイン後のヘッダー-->
    <ul class="nav nav-pills">
    <% if customer_signed_in? %>
      <li>
        <%= link_to "マイページ", customer_path(current_customer) %>
      </li>
      <li>
        <%= link_to "商品一覧", products_path %>
      </li>
      <li>
        <%= link_to "カート",cart_items_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
    <!--管理者側：ログイン後のヘッダー-->
    <% elsif admin_signed_in? %>
      <li>
        <%= link_to "商品一覧", admin_products_path %>
      </li>
      <li>
        <%= link_to "会員一覧", admin_customers_path %>
      </li>
      <li>
        <%= link_to "注文履歴一覧", admin_path %>
      </li>
      <li>
        <%= link_to "ジャンル一覧", admin_genres_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <!--顧客＆管理者：非ログイン時のヘッダー-->
    <% else %>
      <li>
        <%= link_to "about", about_path %>
      </li>
      <li>
        <%= link_to "商品一覧", products_path %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン",new_customer_session_path %>
      </li>
    <% end %>
  </ul>
  <div class="container d-flex flex-wrap justify-content-center">
    <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto" role="search">
      <input type="search" class="form-control" placeholder="Search">
    </form>
  </header>
</div>